<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field name="published" id="published" type="list" label="JSTATUS" class="custom-select-color-state" size="1" default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" readonly="true" class="readonly" description="JGLOBAL_FIELD_ID_DESC" />
        <field name="title" type="text" label="JGLOBAL_TITLE_LABEL" default="" />
        <field name="description" type="editor" label="JGLOBAL_DESCRIPTION_LABEL" width="100%" height="400" default="" filter="safehtml" />

        <field name="ordering" type="hidden" default="0" />
    </fieldset>
</form>